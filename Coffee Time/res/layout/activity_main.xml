<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.dsemw.justjava.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@mipmap/coffee1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Name"
            android:inputType="textCapWords"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Quantity"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/subtract"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:onClick="decrement"
                android:text="-"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/add"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:onClick="increment"
                android:text="+"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/add4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:onClick="add4"
                android:text="A Pack Of 4"
                android:textColor="#ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Toppings"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/caramel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Caramel"
                android:textColor="#ffffff"
                android:textStyle="bold|italic" />

            <CheckBox
                android:id="@+id/Whipped_cream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Whipped Creamel"
                android:textColor="#ffffff"
                android:textStyle="bold|italic" />

            <CheckBox
                android:id="@+id/choclate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Choclate"
                android:textColor="#ffffff"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="5dp"
            android:text="Price"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="$0"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:onClick="submitOrder"
            android:text="ORDER"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>